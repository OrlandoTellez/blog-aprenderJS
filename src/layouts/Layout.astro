---
import "@fontsource-variable/inter";
import Header from "@/components/Header.astro";
import Footer from "@/secciones/Footer.astro";

interface Props {
  tituloPagina: string;
}

const { tituloPagina } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{tituloPagina}</title>
  </head>
  <body>
    <Header />
    <div class="container-slot">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-principal-oscuro: #020d22;
    --color-secundario-oscuro: #0b1726;
    --color-fuente-modo-oscuro: #ffffff;
    --color-boton-oscuro: #354b6b;
    --color-fuente-fechas: #9ca1a1;
    --color-negro: #ffffff;
    --ancho-maximo: 1024px;
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  h1 {
    font-size: 40px;
    color: var(--color-fuente-modo-oscuro);
  }

  h2 {
    font-size: 23px;
    color: var(--color-fuente-modo-oscuro);
  }

  h3 {
    font-size: 22px;
  }

  p {
    font-size: 14px;
  }

  a {
    text-decoration: none;
    color: var(--color-negro);
  }

  li {
    list-style: none;
  }

  .fecha {
    color: var(--color-fuente-fechas);
  }

  html {
    background-color: var(--color-principal-oscuro);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  body {
    width: 100%;
    font-family: "Inter Variable", sans-serif;
    color: var(--color-negro);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .container-slot{
    width: 100%;
    max-width: var(--ancho-maximo);
  }
</style>
