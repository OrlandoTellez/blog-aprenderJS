---
import '@fontsource-variable/inter';
import Header from "@/components/Header.astro"


interface Props{
	tituloPagina: string;
}

const {tituloPagina} = Astro.props

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{tituloPagina}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root{
		--color-principal-oscuro: #212737;
		--color-secundario-oscuro: #2a3447;
		--color-fuente-modo-oscuro: #60a5fa; 
		--color-fuente-fechas: #9ca1a1;
		--color-blanco: #ffffff;
		--ancho-maximo: 1024px;
	
	}

	*{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	h1{
		font-size: 40px;
		color: var(--color-fuente-modo-oscuro);
	}

	h2{
		font-size: 23px;
		color: var(--color-fuente-modo-oscuro);
	}

	h3{
		font-size: 22px;
	}

	

	p{
		font-size: 14px;
	}

	a{
		text-decoration: none;
		color: var(--color-blanco);
	}

	li{
		list-style: none;
	}

	.fecha{
		color: var(--color-fuente-fechas);
	}

	html{
		background-color: var(--color-principal-oscuro);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	body{
		width: 100%;
		max-width: var(--ancho-maximo);
		font-family: 'Inter Variable', sans-serif;
		color: var(--color-blanco);
	}
    
</style>
