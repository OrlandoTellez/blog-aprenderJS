interface Props {
    titulo: string;
    descripcionPrevia: string;
    tag: string;
    url: string;
}
const {titulo, descripcionPrevia, tag, url} = Astro.props
---

<article>
    <h2>{titulo}</h2>
    <p>{descripcionPrevia}</p>
    <div>
        <p>{tag}</p>
        <BotonTarjetaArticulos 
        titulo='Leer mÃ¡s ->'
        url={url}
        />
