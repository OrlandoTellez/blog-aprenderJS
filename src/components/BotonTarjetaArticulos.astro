---
interface Props{
    titulo: string;
    slug: string
}

const{titulo, slug} = Astro.props
---

<a href=`/tutoriales/${slug}`>{titulo}</a>

<style>
    a{
        color: var(--color-fuente-modo-oscuro);
        padding: 5px 20px;
        background-color: var(--color-boton-oscuro);
        border-radius: 10px;
    }
</style>