---
import iconJavascript from "@/assets/iconos/JavaScript.svg";
import iconMenuHamburguesaModoOscuro from "@/assets/iconos/MenuHamburguesa-claro.svg"
---

<header>
  <figure>
    <a href="/" class="logo-link">
      <img src={iconJavascript.src} alt="logo" />
      <h2>JavaScript</h2>
    </a>
  </figure>
  <div class="opacity on"></div>
  <figure class="menu-icon">
    <img src={iconMenuHamburguesaModoOscuro.src} alt="icono-tres barras">
  </figure>
  <nav class="contenedor active">
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/tutoriales">Tutoriales</a></li>
      <li><a href="/recursos">Recursos</a></li>
      <li><a href="/sobreMi">Sobre mi</a></li>
    </ul>
  </nav>
</header>

<style>
    header{
        width: 100%;
        max-width: var(--ancho-maximo);
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--color-secundario-oscuro);
        padding: 20px;
        position: fixed;
    }
    
    .logo-link{
        display: flex;
        gap: 10px;
    }

    nav{
        position: absolute;
        height: 100vh;
        width: 80vw;
        left: 0;
        top: 0;
        z-index: 20;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: var(--color-secundario-oscuro);
        transition: all ease .4s;

        && ul{
          width: 100%;
          display: flex;
          flex-direction: column;

          && li{
            width: 100%;
            font-size: 20px;
            && a{
              display: block;
              width: 100%;
              padding: 20px;
            }
          }

          && li:hover{
            border-bottom: 1px solid white;
          }

        }
    }

    .active{
        transform: translate(-1200px);
    }
    

    @media only screen and (min-width: 1024px){
        .menu-icon{
            display: none;
        }

        nav{
            position: static;
            height: 100%;
            width: 35%;
            transition: all ease 0s;

            && ul{
              flex-direction: row;
              gap: 20px;
              text-align: center;
              
              && li{
                padding: 0px;
                font-size: 16px;
                && a{
                  display: block;
                  width: 100%;
                  padding: 0px;
                }
              }
            }
        }

        .active{
            transform: none;
        }

        
    }
</style>

<script>
    let icono = document.querySelector(".menu-icon")
    let contenedor = document.querySelector(".contenedor")
    icono?.addEventListener("click", () => {
        contenedor?.classList.toggle("active")
    })
</script>
