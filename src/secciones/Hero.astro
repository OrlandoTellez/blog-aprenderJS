---
import Boton from '@/components/Boton.astro';
import BotonTarjetaArticulos from '@/components/BotonTarjetaArticulos.astro';

interface Props{
    tituloSeccion: string;
    subtituloSeccion: string ;
}

const {tituloSeccion, subtituloSeccion} = Astro.props
---


<section>
    <h1>{tituloSeccion}</h1>
    <p>{subtituloSeccion}</p>
    <div>
        <Boton 
        titulo='Ver tutoriales'
        url='/tutoriales'
        />
        <a href="/recursos">Ver recursos</a>
    </div>
</section>

<style>
    section{
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 40px;
        padding: 20px;
        padding-top: 80px;
    }

    a{
        color: var(--color-blanco);
        padding: 10px 20px;
        background-color: var(--color-secundario-oscuro);
        border-radius: 10px;
    }

    div{
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }
</style>