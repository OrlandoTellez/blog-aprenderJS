---
import TarjetaTutoriales from "@/components/TarjetaTutoriales.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const articulos = await getCollection("articles")
---

<Layout tituloPagina="Tutoriales">
  <section>
    <div>
      <h1>Tutoriales de JavaScript</h1>
    </div>
    <article>
      {
        articulos.map((articulo) => (
          <TarjetaTutoriales  
          titulo={articulo.data.titulo}
          descripcionPrevia={articulo.data.descripcionPrevia}
          tag={articulo.data.tag}
          slug={`tutoriales/${articulo.slug}`}
          />
        ))
      }
    </article>
  </section>
</Layout>

<style>
  section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100px 20px;
    gap: 30px;
  }

  article{
    width: 100%;
    margin-top: 25px;
    display: grid;
    gap: 30px;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  
  div{
    height: 20vh;
    display: flex;
    align-items: center;  
  }

  @media only screen and (min-width: 1024px){
    section{
      padding: 100px 0px;
    }
  }
</style>
